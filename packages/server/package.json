{
  "name": "@claude-agent-kit/server",
  "version": "0.1.0",
  "description": "Session management utilities for integrating @anthropic-ai/claude-agent-sdk into back-end services.",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rm -rf dist",
    "lint": "echo \"Add your preferred linter and update scripts\" && exit 0",
    "prepare": "pnpm run build",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest"
  },
  "keywords": [
    "anthropic",
    "claude",
    "agent",
    "session",
    "server"
  ],
  "engines": {
    "node": ">=18"
  },
  "peerDependencies": {
    "@anthropic-ai/claude-agent-sdk": ">=0.1.0"
  },
  "dependencies": {
    "@claude-agent-kit/messages": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^24.8.1",
    "typescript": "^5.4.5",
    "vitest": "^4.0.3"
  }
}
