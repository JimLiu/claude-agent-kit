{
  "name": "claude-agent-kit-workspace",
  "private": true,
  "packageManager": "pnpm@10.19.0",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "pnpm --filter claude-agent-kit run build",
    "clean": "pnpm --filter claude-agent-kit run clean",
    "test": "pnpm --filter claude-agent-kit run test",
    "test:watch": "pnpm --filter claude-agent-kit run test:watch",
    "prepare": "pnpm run build"
  },
  "devDependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.22",
    "@types/node": "^24.8.1",
    "@types/ws": "^8.18.1",
    "typescript": "^5.4.5",
    "vitest": "^4.0.3"
  }
}
