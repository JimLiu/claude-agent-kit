{
  "name": "claude-agent-kit-workspace",
  "private": true,
  "packageManager": "pnpm@10.19.0",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "pnpm -r --filter @claude-agent-kit/* run build",
    "clean": "pnpm -r --filter @claude-agent-kit/* run clean",
    "test": "pnpm -r --filter @claude-agent-kit/* run test",
    "test:watch": "pnpm -r --filter @claude-agent-kit/* run test:watch",
    "publish:all": "node scripts/publish-all.mjs",
    "dev:basic-example": "pnpm --filter claude-agent-sdk-basic-example dev",
    "dev:claude-code-v0": "pnpm --filter claude-code-v0 dev",
    "dev:claude-code-web": "pnpm --filter claude-code-web dev",
    "prepare": "pnpm run build"
  },
  "devDependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.22",
    "@types/node": "^24.8.1",
    "@types/ws": "^8.18.1",
    "typescript": "^5.4.5",
    "vitest": "^4.0.3"
  }
}
